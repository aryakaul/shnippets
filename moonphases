#!/bin/bash

moon_file="$HOME/.cache/moon"

dl() {
    [ -s $moon_file ] && rm "$moon_file"
    [ "$(stat -c %y $moon_file 2> /dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] && (curl -s https://www.moongiant.com/phase/$(date '+%m/%d/%y') > $moon_file;)
}

get_phase() {
    phase="$(grep "var jArray" $moon_file | grep -o -E "(Phase: <span>)(.*)(span)" | cut -f2 -d'<' | cut -f2 -d'>')"
    echo $phase
}

get_emoji() {

    case "$1" in 
        
    "Full Moon")
        emoji="🌝"
        ;;
        
    "Waning Gibbous")
        [[ $2 == "YES" ]] && emoji="🌔" || emoji="🌖"
        ;;

    "Last Quarter")
        [[ $2 == "YES" ]] && emoji="🌓" || emoji="🌗"
        ;;

    "Waning Crescent")
        [[ $2 == "YES" ]] && emoji="🌒" || emoji="🌘"
        ;;
    
    "New Moon") 
        emoji="🌚"
        ;;

    "Waxing Crescent")
        [[ $2 == "YES" ]] && emoji="🌘" || emoji="🌒"
        ;;
    
    "First Quarter")
        [[ $2 == "YES" ]] && emoji="🌗" || emoji="🌓"
        ;;
    
    "Waxing Gibbous")
        [[ $2 == "YES" ]] && emoji="🌖" || emoji="🌔"
        ;;
    esac 
    echo "$emoji $1"
}

main() {
    SOUTHERN=NO
	for i in "$@"; do
	case $i in
        -s|--southern)
        SOUTHERN=YES
        shift
        ;;
        *)    
		;;
	esac
	done
    dl
    get_emoji "$(get_phase)" "$SOUTHERN"
}

main "$@"
